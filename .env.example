# JellyStream Configuration

# Application
APP_NAME=JellyStream
DEBUG=False

# Server
# HOST=0.0.0.0 listens on ALL interfaces — required so both the PHP web UI (via
# localhost) and Jellyfin (via your server's network IP) can reach the API.
# Never set HOST to a specific IP unless you understand the implications.
HOST=0.0.0.0
PORT=8000

# Public URL — the address Jellyfin (and other IPTV clients) use to reach JellyStream.
# Must be a network-accessible IP or hostname, NOT localhost.
# Used in M3U stream URLs and XMLTV icon URLs embedded in the EPG feed.
# Example: JELLYSTREAM_PUBLIC_URL=http://192.168.1.100:8000
JELLYSTREAM_PUBLIC_URL=

# Database
DATABASE_URL=sqlite:///./data/database/jellystream.db

# Jellyfin
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your_api_key_here
JELLYFIN_USER_ID=  # Optional - auto-detected from first user if left empty
JELLYFIN_CLIENT_NAME=JellyStream
JELLYFIN_DEVICE_NAME=JellyStream Server
JELLYFIN_DEVICE_ID=  # Auto-generated if left empty
JELLYFIN_DEFAULT_PAGE_SIZE=50  # Default items per page when browsing
JELLYFIN_MAX_PAGE_SIZE=1000  # Maximum items per page

# Stream proxy
# ISO 639-2 language code for preferred audio track (e.g. eng, fre, spa, jpn, deu)
# Falls back to the first audio track if the preferred language is not present.
PREFERRED_AUDIO_LANGUAGE=eng

# Paths
COMMERCIALS_PATH=./data/commercials
LOGOS_PATH=./data/logos

# Media path mapping — only needed when JellyStream and Jellyfin run on different
# machines (or containers) with different mount points for the same media files.
# Format: /jellyfin/path/prefix:/local/path/prefix
# Leave empty if both services share the same filesystem paths.
# Example: MEDIA_PATH_MAP=/media:/mnt/nas/media
MEDIA_PATH_MAP=

# Scheduler
SCHEDULER_ENABLED=True

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=True
LOG_FILE_PATH=./logs
LOG_FILE_MAX_BYTES=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30
